
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Drawer" parent="AppTheme.PopupOverlay">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.BottomToolbar" parent="AppTheme.PopupOverlay">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.AppBarAction" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarIconsColors" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppTheme.TopBar" parent="AppTheme.PopupOverlay">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="drawerArrowStyle">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
