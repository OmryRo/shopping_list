<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_row"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shared_with"
            android:textSize="30sp"
            android:layout_alignParentStart="true"/>

        <ImageButton
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_layout_dismiss"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:padding="15dp"
            android:src="@drawable/ic_close" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/share_layout_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_below = "@id/first_row"/>

    <Button
        android:id="@+id/share_layout_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_layout_recycle_view"
        android:layout_centerVertical="true"
        android:onClick="onClickSahre"
        android:text="share" />

</RelativeLayout>